extends layout

block content

  link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet")

  .main.container
    .row
      .col-md-6.col-md-offset-3.jumbotron
        h1.display-4.m-b-2 Search

        // register form
        form(method='post' action='/searchPage')
          span #{mess}
          div.form-group
            label(for='search') search :
            input#name.form-control(type='text', placeholder='search' name='search')
          div.form-group
            label(for='offset') offset :
            input#name.form-control(type='number', placeholder='offset' name='offset')
          button.btn.btn-primary(type='submit') Search
    .row
      .col-md-8.col-md-offset-2
        ul
          each items in data
            li= items.snippet + ': '
              a= items.url